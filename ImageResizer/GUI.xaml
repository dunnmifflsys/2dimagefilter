<Window x:Class="ImageResizer.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ImageResizer" Height="453" Width="879" Icon="/ImageResizer;component/App.ico">
    <Grid>
        <Menu Height="22" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="_voidOpen_Click" />
                <MenuItem Name="miSave" Header="Save" Click="voidSave_Click" IsEnabled="False" />
                <MenuItem Header="Close"  Click="voidClose_Click"/>
                <Separator />
                <MenuItem Header="Exit"  Click="voidExit_Click"/>
            </MenuItem>
        </Menu>
        <GroupBox Header="Resize" Margin="358,24,381,4" Name="groupBox1">
            <Grid>
                <Label Height="24" Margin="0,12,-6,0" VerticalAlignment="Top">Width</Label>
                <TextBox Height="24" Name="txtWidth" Margin="0,36,54,0" VerticalAlignment="Top" />
                <Label Height="24" Margin="0,61,-6,0" VerticalAlignment="Top">Height</Label>
                <TextBox Height="24" Name="txtHeight" Margin="0,83,54,256" />
                <Label Margin="0,0,-6,204" Height="24" VerticalAlignment="Bottom">Method</Label>
                <CheckBox Content="Use Thresholds" Height="16" HorizontalAlignment="Left" Margin="0,113,0,0" Name="cbThresholds" VerticalAlignment="Top" />
                <ComboBox Height="24" Margin="0,0,8,174" Name="lbMethods" VerticalAlignment="Bottom" />
        <Button Height="24" Margin="0,0,0,84" Name="btRepeat" VerticalAlignment="Bottom"  IsEnabled="False" Width="66">Repeat</Button>
        <Button Height="24" Margin="0,0,0,48" Name="btSwitch" VerticalAlignment="Bottom"  IsEnabled="False" Width="66">&lt;- Switch</Button>
        <Button Height="24" Margin="0,0,0,12" Name="btResize" VerticalAlignment="Bottom" IsEnabled="False" Width="66">Resize -&gt;</Button>
      </Grid>
        </GroupBox>
        <GroupBox Header="Source" Margin="4,24,505,4" MouseLeftButtonDown="_voidOpen_Click" >
            <Grid>
              <Image Name="imgSource" Stretch="Fill" Margin="0,0,0,28" Visibility="Visible"/>
              <Label Name="lblSrcDim" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Hidden">Width x Height</Label>
            </Grid>
        </GroupBox>
        <GroupBox Header="Target" Margin="482,24,0,4" MouseLeftButtonDown="voidSave_Click">
            <Grid>
              <Image Name="imgTarget" Stretch="Fill" Margin="0,0,0,28" Visibility="Visible"/>
              <Label Name="lblTgtDim" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Center" Visibility="Hidden">Width x Height</Label>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
